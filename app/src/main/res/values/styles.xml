<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppFloatingActionButton" parent="Widget.Design.FloatingActionButton">
        <item name="android:backgroundTint">@color/yellow_600</item>
        <item name="android:layout_margin">@dimen/fab_padding</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="borderWidth">0dp</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="MySeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">#f4511e</item>
        <item name="android:progressTint">#388e3c</item>
        <item name="android:thumbTint">#c51162</item>
    </style>


    <style name="AppToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextColor">@color/black</item>
    </style>

    <style name="Button.Rounded" parent="ThemeOverlay.AppCompat">
        <item name="background">@drawable/rounded_corner_small_color</item>
        <item name="backgroundTint">@color/primary_dark</item>
        <item name="textAllCaps">false</item>
    </style>

</resources>